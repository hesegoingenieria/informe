<form id="formulario" class="flex flex-col items-center gap-5">
  <div class="w-[450px] gap-5 max-sm:w-[300px]">
    <div class="flex justify-between items-center gap-2">
      <label for="fechaInicio" class="text-nowrap">Fecha inicio: </label>
      <input id="fechaInicio" name="fechaInicio" class="bg-white border border-stone-200 rounded p-1 w-[350px] max-sm:w-[200px]" type="date" required />
    </div>
    <div class="flex justify-between items-center gap-2 mt-3">
      <label for="fechaFin" class="text-nowrap">Fecha fin: </label>
      <input id="fechaFin" name="fechaFin" class="bg-white border border-stone-200 rounded p-1 w-[350px] max-sm:w-[200px]" type="date" required />
    </div>
    <div class="flex justify-between items-center gap-2 mt-3">
      <label for="sector" class="text-nowrap">Sede: </label>
      <select id="sector" name="sector" class="bg-white border border-stone-200 rounded p-1 w-[350px] max-sm:w-[200px]" required multiple>
        <% sectores.map((option) => { %>
          <option
            value=<%- option.id + "-" + option.name %>
          >
            <%= option.name %>
          </option>
        <% }) %>
      </select>
    </div>
  </div>
  <button id="descargar" type="submit" class="text-white font-bold flex gap-2 items-center bg-green-600 rounded p-2 hover:bg-green-800">
    Descargar Excel
    <span class="fas fa-download"></span>
  </button>
</form>